<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>

<AnchorPane prefHeight="250.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Calculator">
	<children>
		<BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
			<top>
            <TextField fx:id="display" alignment="BASELINE_RIGHT" onAction="#onEnter">
               <BorderPane.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </TextField>
			</top>
			<center>
				<GridPane hgap="8.0" vgap="8.0">
					<children>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">(</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">)</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#clear" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">C</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">7</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">8</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">9</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">4</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">5</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">6</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS">1</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS">2</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS">3</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.vgrow="ALWAYS">0</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.vgrow="ALWAYS">.</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#calc" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.vgrow="ALWAYS">=</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">%</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">/</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">*</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS">-</Button>
	      				<Button maxHeight="Infinity" maxWidth="Infinity" onAction="#input" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.vgrow="ALWAYS">+</Button>
	      			</children>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </BorderPane.margin>
	   			</GridPane>
	   		</center>
	   	</BorderPane>
   </children>
</AnchorPane>
